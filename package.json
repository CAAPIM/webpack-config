{
  "name": "@caapim/webpack-config",
  "version": "0.0.0-development",
  "author": "CA Technologies",
  "description": "Configuration for Webpack projects at CA",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/CAAPIM/webpack-config.git"
  },
  "keywords": [
    "webpack",
    "config",
    "webpack-config",
    "ca"
  ],
  "license": "MIT",
  "dependencies": {
    "assets-webpack-plugin": "^3.4.0",
    "autoprefixer": "^6.5.0",
    "babel-loader": "^6.2.5",
    "baggage-loader": "^0.2.4",
    "browser-sync": "^2.18.2",
    "browser-sync-webpack-plugin": "^1.1.3",
    "clean-webpack-plugin": "^0.1.13",
    "css-loader": "^0.25.0",
    "dotenv": "^2.0.0",
    "eslint-loader": "^1.5.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.36.0",
    "flow-status-webpack-plugin": "^0.1.7",
    "html-loader": "^0.4.4",
    "image-webpack-loader": "^3.0.0",
    "imagemin": "^5.2.2",
    "json-loader": "^0.5.4",
    "merge": "^1.2.0",
    "node-sass": "^3.10.1",
    "object-path": "^0.11.2",
    "postcss-loader": "^1.1.0",
    "sass-loader": "^4.0.2",
    "source-map-loader": "^0.1.5",
    "stats-webpack-plugin": "^0.4.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack-config": "^6.1.3",
    "webpack-node-externals": "^1.5.4"
  },
  "peerDependencies": {
    "webpack-dev-server": "*",
    "webpack": "*"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-ca": "^1.0.0",
    "codecov": "^1.0.1",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.11.1",
    "eslint-config-ca": "^1.0.0",
    "flow-bin": "^0.36.0",
    "flow-coverage-report": "^0.2.0",
    "husky": "^0.11.9",
    "jest": "^17.0.3",
    "react": "^15.4.1",
    "rimraf": "^2.5.4",
    "semantic-release": "^6.3.2",
    "validate-commit-msg": "^2.8.2",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "scripts": {
    "codecov": "codecov",
    "commit": "git-cz",
    "lint": "eslint .",
    "flow": "flow check",
    "flow:coverage": "flow-coverage-report -i './src/**/*.js' -t html -t text",
    "prebuild": "rimraf ./lib",
    "build": "babel src --out-dir lib",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "pretest:acceptance": "npm run build",
    "test:acceptance": "cd tests/acceptance; webpack --bail; NODE_ENV=production webpack --bail",
    "release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm run lint && npm run flow && npm run test && npm run test:acceptance"
  },
  "config": {
    "validate-commit-msg": {
      "types": "conventional-commit-types"
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}

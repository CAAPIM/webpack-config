{
  "name": "webpack-config-ca",
  "version": "0.0.0-development",
  "author": "CA Technologies",
  "description": "Configuration for Webpack projects at CA",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/CAAPIM/webpack-config.git"
  },
  "keywords": [
    "webpack",
    "config",
    "webpack-config",
    "ca"
  ],
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.0",
    "babel-loader": "^7.0.0",
    "browser-sync": "^2.18.8",
    "browser-sync-webpack-plugin": "^1.1.4",
    "css-loader": "^0.28.0",
    "eslint-loader": "^1.7.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "flow-bin": "^0.43.0",
    "flow-status-webpack-plugin": "^0.1.7",
    "html-loader": "^0.4.5",
    "image-webpack-loader": "^3.3.0",
    "imagemin": "^5.2.2",
    "json-loader": "^0.5.4",
    "node-sass": "^4.5.2",
    "postcss-loader": "^1.3.3",
    "react-svg-loader": "^1.1.1",
    "sass-loader": "^6.0.3",
    "source-map-loader": "^0.2.0",
    "stats-webpack-plugin": "^0.6.0",
    "style-loader": "^0.16.1",
    "url-loader": "^0.5.8",
    "webpack-config": "^7.0.0"
  },
  "peerDependencies": {
    "webpack-dev-server": "^2.4.2",
    "webpack": "^2.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-preset-ca": "^1.1.0",
    "codecov": "^2.1.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "decamelize": "^1.2.0",
    "eslint": "^3.18.0",
    "eslint-config-ca": "^2.0.0",
    "flow-bin": "^0.43.0",
    "flow-coverage-report": "^0.3.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.2",
    "validate-commit-msg": "^2.11.2",
    "webpack": "^2.3.2",
    "webpack-config": "^7.0.0",
    "webpack-dev-server": "^2.4.2"
  },
  "scripts": {
    "codecov": "codecov",
    "commit": "git-cz",
    "lint": "eslint .",
    "flow": "flow check",
    "flow:coverage": "flow-coverage-report -i './src/**/*.js' -t html -t text",
    "prebuild": "rimraf ./lib",
    "build": "babel src --out-dir lib",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "pretest:acceptance": "npm run build",
    "test:acceptance": "cd tests/acceptance; webpack --bail; NODE_ENV=production webpack --bail",
    "release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm run lint && npm run flow && npm run test && npm run test:acceptance",
    "start": "npm run build && cd example && npm start"
  },
  "config": {
    "validate-commit-msg": {
      "types": "conventional-commit-types"
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|css|less|sass|scss)$": "<rootDir>/tests/__mocks__/files.js"
    },
    "unmockedModulePathPatterns": [
      "node_modules/react/"
    ]
  }
}
